<h1>All Books</h1>


<a class="button" href="/books/new">New Book</a>

<% if @books == [] %>
  <h2>No books!</h2>
<% else %>
  <% @books.each do |book| %>
    <p>Author(s)</p>
    <%require 'pry'; binding.pry%>
    <%if book.authors.length == 1%>
      <ul>
        <li>book.authors[0].name</li>
      </ul>
    <% else %>
      <% book.authors.each do |author| %>
        <ul id="authors">
          <li><%= author.name %></li>
        </ul>
      <% end %>
    <% end %>
    <ul id="books">
      <li>Title: <%= link_to book.title, book_path(book), class:'book-title', id:'book-#{book.id}' %></li>
      <li>Page Count: <%= book.pages %></li>
      <li>Published: <%= book.year %></li>
      <li><img src=<%= book.cover_url %> alt=book.title></li>
    </ul>
  <% end %>
<% end %>
