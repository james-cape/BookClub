<html>
<h1>Enter New Book</h1>

<section class="inputs"
  <h1>Enter a new title:</h1>
  <%= form_for(@book) do |f| %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title, required: true %>
    </p>
    <p>
      <%= f.label :year %><br />
      <%= f.number_field :year, required: true %>
    </p>
    <p>
      <%= f.label :pages %><br />
      <%= f.number_field :pages, required: true %>
    </p>
    <p>
      <%= f.label :cover_url %><br />
      <%= f.url_field :cover_url %>
    </p>
    <p>
      <%= f.label :author %><br />
      <%= f.text_area :authors, value: "" %>
    </p>
    <p>
      <%= f.submit("Submit Book") %>
    </p>
  <% end %>
</section>
</html>
