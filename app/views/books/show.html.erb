<html lang="en">
  <head>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap 101 Template</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
  </head>
<body>
  <nav class="navmaster">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Welcome</a>
      <a class="navbar-brand" href=<%= books_path %>>Books Central</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href=<%= new_book_review_path(@book.id) %>>Write Review <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link", <%= link_to 'Delete Book', book_path(@book.id), method: :delete %></a>
          </li>
        </ul>
      </div>
    </nav>
  </nav>

  <section id='average-rating'>
    <h2><%= @book.title %>, Average Rating: <%= @overall_average.round(2) %></h2>
    <p><img src= <%= @book.cover_url %> alt=<%= @book.title%> ></p>
  </section>
  <% @book.authors.each do |author| %>
    <p>Author: <%= link_to author.name, author_path(author), class:'book-author', id:'author-#{author.id}' %></p>
  <% end %>
  Pages: <%= @book.pages %><br>
  Year Published: <%= @book.year %><br>
  <br>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <span class="glyphicon glyphicon-cloud" aria-hidden="true"></span>
        <section id='top-three-reviews'>
          <h3>Best Reviews</h3>
          <% @three_best_reviews.each do |review| %>
          <hr>
            <p>Title: <%= review.headline %></p>
            <p>Username: <%= link_to review.user.username, user_path(review.user), class:'review-user', id:'user-#{review.user.id}' %></p>
            <p>Rating: <%= review.rating %></p>
            <br>
          <% end %>
        </section>
      </div>

      <div class="col-md-6">
        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
        <section id='bottom-three-reviews'>
          <h3>Worst Reviews</h3>
          <% @three_worst_reviews.each do |review| %>
          <hr>
            <p>Title: <%= review.headline %></p>
            <p>Username: <%= link_to review.user.username, user_path(review.user), class:'review-user', id:'user-#{review.user.id}' %></p>
            <p>Rating: <%= review.rating %></p>
            <br>
          <% end %>
        </section>
      </div>
      <h3>All Reviews</h3>
      <section id='standard-reviews'>
        <% @book.reviews.each do |review| %>
        <br>
        <hr>
          <p>Review Title: <%= review.headline %>
          <p><%= link_to review.user.username, user_path(review.user), class:'review-user', id:'user-#{review.user.id}' %></p>
          <p>Rating: <%= review.rating %>
          <p>Review: <%= review.body %>
        <% end %>
      </section>

      <br>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
</html>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
