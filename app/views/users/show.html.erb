<html lang="en">
  <head>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap 101 Template</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
  </head>
<body>
  <nav class="navmaster">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Welcome</a>
      <a class="navbar-brand" href=<%= books_path %>>Books Central</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href=<%= new_book_path %>>Enter New Book <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Sort Reviews
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="nav-link", <%= link_to "Oldest to Newest", controller: "users", action: "show", sort: "ascend"%></a>
              <a class="nav-link", <%= link_to "Newest to Oldest", controller: "users", action: "show", sort: "descend"%></a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </nav>

<h1><%= @user.username %></h1>
<br>
<h2>Reviews</h2>
<ul id='all-reviews'>
<% @reviews.each do |review| %>
 <hr>
  <li>
    <section id='review-<%= review.id %>'
      <img class="small-image" src=<%= review.book.cover_url %> alt=<%=review.book.title%>>
      <h2><a href=<%= book_path(review.book) %>><%= review.book.title %></a></h2>
      <p>Headline: <%= review.headline %></p>
      <p>Body: <%= review.body %></p>
      <p>Rating: <%= review.rating %></p>
      <p>Date Created:<%= review.book.created_at %></p>
      <%= link_to 'Delete Review', book_review_path(review.book.id, review, user_id: @user.id), method: :delete %>
    </section>
  </li>
  <br >
<% end %>
</ul>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
</html>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
